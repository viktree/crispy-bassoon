
$small-device-breakpoint = 750px

$full-display-only = "(min-width: " + $small-device-breakpoint + ")"
$mobile-only = "(max-width: " + $small-device-breakpoint + ")"

.flex-grid
  height: 100%
  justify-content: space-between
  display: flex
  @media $mobile-only
    display: block

.flex-grid-content
  height: 100%
  padding: 20px
  padding-top: 40px
  $sidebar-size = 400px
  max-width: $sidebar-size + 1000px
  @media $full-display-only
    padding-left: $sidebar-size

.flex-grid-sidebar
  @media $full-display-only
    padding: 20px
    padding-top: 40px
    position: fixed
    top: 0
    left: 0
    bottom: 0

/* ================================================================================== */

.content-outer
  background-color: var(--main-bg-gutter)

.content
  background-color: var(--main-bg-content)
  color: var(--main-fg-content)
  font-family: sans-serif
  a
    color: var(--main-accent-content)
    text-decoration: none

