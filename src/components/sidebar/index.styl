/* ================================================================================== */

$small-device-breakpoint = 750px

$full-display-only = "(min-width: " + $small-device-breakpoint + ")"
$mobile-only = "(max-width: " + $small-device-breakpoint + ")"

$speech-bubble-background-color = var(--sidebar-dull)
$speech-bubble-color = var(--main-sidebar-color)

.sidebar-gutter
  background-color: var(--main-bg-gutter)
  @media $full-display-only
    background-color: var(--main-sidebar-color)

.sidebar
  text-align: center
  padding: 20px
  color: var(--main-bg-content)
  background-color: var(--main-sidebar-color)
  @media $full-display-only
    padding: 3px
    position: fixed
    width: 300px
    left: 20px
    bottom: 20px
    top: 150px
    text-align: left


.sidebar-toronto
  background-color: var(--main-bg-gutter)
  fill: var(--main-sidebar-color)
  position: fixed
  max-width: 300px
  left: 20px
  top: 20px
  text-align: left
  @media $mobile-only
    display: none
      

.sidebar-avatar
  background: var(--main-bg-content)
  max-width: 25%
  border-radius: 50%
  padding: 0px
  @media $mobile-only
    display: none

.sidebar-icon
  background-color: var(--main-sidebar-color)
  color: var(--sidebar-dull)
  height: 30px
  margin: 7px
  padding-left: 10px
  &:hover
    background-color: var(--main-sidebar-color)
    color: var(--sidebar-links)

.sidebar-links
  padding: 30px 0
  line-height: 2
  a
    font-size: 20px
    font-family: Bitter
    text-decoration: none
    color: var(--sidebar-dull)
    &:hover
      color: var(--sidebar-links)

.sidebar-license
  font-size: 14px


.sidebar-container
  @media $full-display-only
    position: absolute
    padding-left: 20px
    padding-right: 20px
    bottom: 40px


.sidebar-speech-bubble
  position: relative
  background: $speech-bubble-background-color
  color: $speech-bubble-color
  padding: 10px
  font-size: 15px
  line-height: normal
  border-radius: 0.4em
  @media $mobile-only
    display: none


.sidebar-speech-bubble:after
  content: ""
  position: absolute
  top: 0
  left: 20%
  width: 0
  height: 0
  border: 23px solid transparent
  border-bottom-color: $speech-bubble-background-color
  border-top: 0
  border-left: 0
  margin-left: -15px
  margin-top: -20px
  @media $mobile-only
    display: none